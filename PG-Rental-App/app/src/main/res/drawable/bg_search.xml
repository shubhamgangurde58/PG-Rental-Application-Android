<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background -->
    <solid android:color="#FFFFFF"/>

    <!-- Rounded corners (compact) -->
    <corners android:radius="8dp"/>

    <!-- Light border -->
    <stroke
        android:width="1dp"
        android:color="#E5E7EB"/>

    <!-- Compact padding -->
    <padding
        android:left="10dp"
        android:top="6dp"
        android:right="10dp"
        android:bottom="6dp"/>

</shape>
