<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F4F6F7">

    <!-- Header -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Bookings"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#2E86DE" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Track your PG booking requests"
        android:textSize="14sp"
        android:textColor="#6C757D"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="12dp"/>

    <!-- âŒ No bookings text (HIDDEN by default) -->
    <TextView
        android:id="@+id/tvNoBookings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No booking requests found"
        android:textSize="16sp"
        android:textColor="#6C757D"
        android:gravity="center"
        android:padding="20dp"
        android:visibility="gone"/>

    <!-- Booking List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerBookings"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>
