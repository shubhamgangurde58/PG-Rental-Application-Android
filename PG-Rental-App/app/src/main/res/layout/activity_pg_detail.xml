<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F5F7FA"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ================= PG IMAGE ================= -->
    <ImageView
        android:id="@+id/imgPg"
        android:layout_width="0dp"
        android:layout_height="220dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- ================= DETAILS CARD ================= -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardDetails"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/imgPg"
        app:layout_constraintBottom_toTopOf="@id/bottomBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- PG NAME -->
                <TextView
                    android:id="@+id/tvPgName"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#212529"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <!-- â­ OVERALL RATING -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginTop="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <RatingBar
                        android:id="@+id/ratingBarOverall"
                        style="?android:attr/ratingBarStyleSmall"
                        android:numStars="5"
                        android:stepSize="0.5"
                        android:isIndicator="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/txtRatingCount"
                        android:textSize="14sp"
                        android:textColor="#6C757D"
                        android:layout_marginStart="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <!-- RENT -->
                <TextView
                    android:id="@+id/tvRent"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#1976D2"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <!-- TYPE -->
                <TextView
                    android:id="@+id/tvType"
                    android:textSize="14sp"
                    android:textColor="#495057"
                    android:layout_marginTop="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <!-- ADDRESS -->
                <TextView
                    android:id="@+id/tvAddress"
                    android:textSize="14sp"
                    android:textColor="#495057"
                    android:layout_marginTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <!-- PG CONTACT -->
                <TextView
                    android:id="@+id/tvPgContact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#455A64"
                    android:layout_marginTop="6dp"/>

                <!-- DIVIDER -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="12dp"
                    android:background="#E0E0E0"/>

                <!-- DESCRIPTION TITLE -->
                <TextView
                    android:text="Description"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#212529"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <!-- DESCRIPTION -->
                <TextView
                    android:id="@+id/tvDescription"
                    android:textSize="14sp"
                    android:textColor="#495057"
                    android:layout_marginTop="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>

    <!-- ================= BOTTOM ACTION BAR ================= -->
    <LinearLayout
        android:id="@+id/bottomBar"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- PRIMARY ACTION -->
        <Button
            android:id="@+id/btnBookPg"
            android:text="Book This PG"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:backgroundTint="#1976D2"
            android:textColor="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="52dp"/>

        <!-- ICON ACTIONS -->
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Contact -->
            <ImageButton
                android:id="@+id/btnContactOwner"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@android:drawable/ic_menu_call"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Contact Owner"/>

            <!-- ðŸ—º View on Map -->
            <ImageButton
                android:id="@+id/btnViewOnMap"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="32dp"
                android:src="@drawable/ic_menu_compass"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="View PG on Map"/>

            <!-- Reviews -->
            <ImageButton
                android:id="@+id/btnViewReviews"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="32dp"
                android:src="@android:drawable/ic_menu_info_details"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="View Reviews"/>

            <!-- Rate -->
            <ImageButton
                android:id="@+id/btnRatePg"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="32dp"
                android:src="@android:drawable/btn_star"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Rate PG"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
