<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA">

    <LinearLayout
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="28dp"
        android:paddingBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- ================= PAGE TITLE ================= -->
        <TextView
            android:text="Edit Owner Profile"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#212529"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Update your personal &amp; PG details"
            android:textSize="14sp"
            android:textColor="#6C757D"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- ================= PROFILE CARD ================= -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="16dp"
            card_view:cardElevation="6dp"
            card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:orientation="vertical"
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Owner Name -->
                <EditText
                    android:id="@+id/edtName"
                    android:hint="Owner Full Name"
                    android:padding="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"/>

                <!-- Email -->
                <EditText
                    android:id="@+id/edtEmail"
                    android:hint="Email Address"
                    android:inputType="textEmailAddress"
                    android:layout_marginTop="12dp"
                    android:padding="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"/>

                <!-- Mobile -->
                <EditText
                    android:id="@+id/edtMobile"
                    android:hint="Mobile Number"
                    android:inputType="phone"
                    android:layout_marginTop="12dp"
                    android:padding="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"/>

                <!-- ================= PG DETAILS ================= -->

                <TextView
                    android:text="PG Information"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#212529"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <!-- PG Name -->
                <EditText
                    android:id="@+id/edtPgName"
                    android:hint="PG Name"
                    android:padding="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"/>

                <!-- PG Address -->
                <EditText
                    android:id="@+id/edtAddress"
                    android:hint="PG Address"
                    android:layout_marginTop="12dp"
                    android:padding="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <!-- City -->
                <EditText
                    android:id="@+id/edtCity"
                    android:hint="City"
                    android:layout_marginTop="12dp"
                    android:padding="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"/>

                <!-- ================= SECURITY ================= -->

                <TextView
                    android:text="Security"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#212529"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <!-- Old Password -->
                <EditText
                    android:id="@+id/edtOldPassword"
                    android:hint="Current Password"
                    android:inputType="textPassword"
                    android:layout_marginTop="4dp"
                    android:padding="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"/>

                <!-- New Password -->
                <EditText
                    android:id="@+id/edtNewPassword"
                    android:hint="New Password"
                    android:inputType="textPassword"
                    android:layout_marginTop="12dp"
                    android:padding="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"/>

                <!-- Confirm Password -->
                <EditText
                    android:id="@+id/edtConfirmPassword"
                    android:hint="Confirm New Password"
                    android:inputType="textPassword"
                    android:layout_marginTop="12dp"
                    android:padding="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"/>

                <!-- Save Button -->
                <Button
                    android:id="@+id/btnSaveProfile"
                    android:text="Save Changes"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:layout_marginTop="24dp"
                    android:backgroundTint="#1976D2"
                    android:textColor="#FFFFFF"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
