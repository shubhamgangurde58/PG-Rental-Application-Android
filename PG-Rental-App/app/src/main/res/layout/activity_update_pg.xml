<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- ================= HEADER ================= -->
        <TextView
            android:text="Update PG Details"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#212529"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Modify your PG information"
            android:textSize="14sp"
            android:textColor="#6C757D"
            android:layout_marginBottom="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- ================= CARD ================= -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="16dp"
            card_view:cardElevation="6dp"
            card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- PG NAME -->
                <TextView
                    android:text="PG Name"
                    android:textStyle="bold"
                    android:textColor="#212529"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/edtPgName"
                    android:hint="Enter PG Name"
                    android:padding="12dp"
                    android:layout_marginTop="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <!-- RENT -->
                <TextView
                    android:text="Monthly Rent"
                    android:textStyle="bold"
                    android:textColor="#212529"
                    android:layout_marginTop="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/edtRent"
                    android:hint="Enter Monthly Rent"
                    android:inputType="number"
                    android:padding="12dp"
                    android:layout_marginTop="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <!-- CITY / LOCATION -->
                <TextView
                    android:text="City / Location"
                    android:textStyle="bold"
                    android:textColor="#212529"
                    android:layout_marginTop="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/edtLocation"
                    android:hint="Enter City or Location"
                    android:padding="12dp"
                    android:layout_marginTop="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <!-- ADDRESS -->
                <TextView
                    android:text="PG Address"
                    android:textStyle="bold"
                    android:textColor="#212529"
                    android:layout_marginTop="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/edtAddress"
                    android:hint="Enter PG Address"
                    android:minLines="2"
                    android:gravity="top"
                    android:padding="12dp"
                    android:layout_marginTop="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <!-- PG TYPE -->
                <TextView
                    android:text="PG Type"
                    android:textStyle="bold"
                    android:textColor="#212529"
                    android:layout_marginTop="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Spinner
                    android:id="@+id/spinnerType"
                    android:layout_marginTop="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <!-- CONTACT NUMBER -->
                <TextView
                    android:text="PG Contact Number"
                    android:textStyle="bold"
                    android:textColor="#212529"
                    android:layout_marginTop="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/edtContact"
                    android:hint="Enter Contact Number"
                    android:inputType="phone"
                    android:padding="12dp"
                    android:layout_marginTop="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <!-- DESCRIPTION -->
                <TextView
                    android:text="Description"
                    android:textStyle="bold"
                    android:textColor="#212529"
                    android:layout_marginTop="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/edtDescription"
                    android:hint="Enter PG Description"
                    android:minLines="3"
                    android:gravity="top"
                    android:padding="12dp"
                    android:layout_marginTop="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <!-- PG IMAGE -->
                <TextView
                    android:text="PG Image"
                    android:textStyle="bold"
                    android:textColor="#212529"
                    android:layout_marginTop="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/btnChangeImage"
                    android:text="Change PG Image"
                    android:textAllCaps="false"
                    android:layout_marginTop="6dp"
                    android:layout_width="match_parent"
                    android:backgroundTint="#1976D2"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/imgPg"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/pg_sample"
                    android:layout_marginBottom="8dp" />

                <!-- UPDATE BUTTON -->
                <Button
                    android:id="@+id/btnUpdatePg"
                    android:text="Save Changes"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:backgroundTint="#1976D2"
                    android:textColor="#FFFFFF" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
