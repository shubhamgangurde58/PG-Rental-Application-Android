<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#F5F7FA"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ================= HEADER ================= -->
    <LinearLayout
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="28dp"
        android:paddingBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- App Name + Menu -->
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtAppName"
                android:text="RoomBuddy"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#1976D2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>

            <ImageButton
                android:id="@+id/btnMore"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_more"
                android:contentDescription="Menu"/>
        </LinearLayout>

        <!-- Greeting -->
        <TextView
            android:id="@+id/txtGreeting"
            android:text="Hello ðŸ‘‹"
            android:textSize="14sp"
            android:textColor="#6C757D"
            android:layout_marginTop="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <!-- ================= EMPTY STATE ================= -->
    <LinearLayout
        android:id="@+id/layoutNoPg"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:src="@android:drawable/ic_menu_info_details"
            app:tint="#B0BEC5"/>

        <TextView
            android:text="No PG Added Yet"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#212529"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Add your PG to start receiving bookings ðŸ "
            android:textSize="14sp"
            android:textColor="#6C757D"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <!-- ================= OWNER PG CARD ================= -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardPg"
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp">

        <LinearLayout
            android:orientation="vertical"
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgPg"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/tvPgName"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvAddress"
                android:textSize="14sp"
                android:textColor="#6C757D"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvRent"
                android:textStyle="bold"
                android:textColor="#1976D2"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <!-- Rating -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RatingBar
                    android:id="@+id/ratingBar"
                    style="?android:attr/ratingBarStyleSmall"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:stepSize="0.5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/txtReviewCount"
                    android:layout_marginStart="6dp"
                    android:textSize="13sp"
                    android:textColor="#6C757D"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <!-- Reviews Button -->
            <Button
                android:id="@+id/btnViewReviews"
                android:text="View Reviews"
                android:textAllCaps="false"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:backgroundTint="#1976D2"
                android:textColor="#FFFFFF"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- PUSH CONTENT DOWN -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <!-- ================= MANAGE PG ================= -->
    <LinearLayout
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnManagePg"
            android:text="Manage PG"
            android:textAllCaps="false"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:backgroundTint="#1976D2"
            android:textColor="#FFFFFF"/>
    </LinearLayout>

    <!-- ================= BOTTOM NAV ================= -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@android:color/white"
        app:menu="@menu/owner_bottom_nav"
        app:labelVisibilityMode="labeled"
        app:itemIconTint="#1976D2"
        app:itemTextColor="#1976D2"/>

</LinearLayout>
