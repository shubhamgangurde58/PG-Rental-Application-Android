<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F7FA">

    <!-- ================= HEADER ================= -->
    <LinearLayout
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="28dp"
        android:paddingBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Greeting -->
        <TextView
            android:id="@+id/txtGreeting"
            android:text="Hello ðŸ‘‹"
            android:textSize="14sp"
            android:textColor="#6C757D"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- Page Title -->
        <TextView
            android:text="Booking Requests"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#212529"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- Subtitle -->
        <TextView
            android:text="Accept or reject student bookings"
            android:textSize="14sp"
            android:textColor="#6C757D"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <!-- ================= EMPTY STATE ================= -->
    <LinearLayout
        android:id="@+id/layoutEmpty"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:text="No Booking Requests"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#212529"
            android:layout_marginBottom="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Students have not requested bookings yet"
            android:textSize="14sp"
            android:textColor="#6C757D"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <!-- ================= BOOKINGS LIST ================= -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerOwnerBookings"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp"/>
</LinearLayout>
